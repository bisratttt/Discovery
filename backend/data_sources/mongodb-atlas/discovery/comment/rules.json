{
    "collection": "comment",
    "database": "discovery",
    "roles": [
        {
            "name": "userReadAllWriteOwn",
            "apply_when": {
                "%%user.identities.provider_type": "local-userpass"
            },
            "document_filters": {
                "write": {
                    "%or": [
                        {
                            "owner_id": {
                                "%exists": false
                            }
                        },
                        {
                            "owner_id": "%%user.id"
                        }
                    ]
                },
                "read": true
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "guestReadAll",
            "apply_when": {
                "%%user.identities.provider_type": "api-key"
            },
            "document_filters": {
                "write": false,
                "read": true
            },
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "search": true
        }
    ]
}
