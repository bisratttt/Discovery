{
    "bsonType": "object",
    "properties": {
        "_id": {
            "bsonType": "objectId",
            "validate": {
                "%or": [
                    {
                        "%%prev": {
                            "%exists": false
                        }
                    },
                    {
                        "%%prev": "%%this"
                    }
                ]
            }
        },
        "body": {
            "%%true": {
                "%function": {
                    "arguments": "%%this",
                    "name": "validateCommentBody"
                }
            },
            "bsonType": "string",
            "description": "Body must be at least 300 words!"
        },
        "owner_id": {
            "bsonType": "objectId"
        },
        "song": {
            "bsonType": "objectId"
        },
        "time": {
            "bsonType": "date"
        },
        "title": {
            "%%true": {
                "%function": {
                    "arguments": "%%this",
                    "name": "validateCommentTitle"
                }
            },
            "bsonType": "string",
            "description": "Title must not be empty!"
        },
        "username": {
            "bsonType": "string"
        }
    },
    "required": [
        "title",
        "username",
        "body",
        "_id",
        "owner_id"
    ],
    "title": "comment"
}
