{
    "bsonType": "object",
    "properties": {
        "_id": {
            "bsonType": "objectId",
            "validate": {
                "%or": [
                    {
                        "%%prev": {
                            "%exists": false
                        }
                    },
                    {
                        "%%prev": "%%this"
                    }
                ]
            }
        },
        "body": {
            "bsonType": "string",
            "validate": {
                "%%true": {
                    "%function": {
                        "arguments": "%%this",
                        "name": "validateCommentBody"
                    }
                }
            }
        },
        "owner_id": {
            "bsonType": "objectId"
        },
        "song": {
            "bsonType": "objectId"
        },
        "time": {
            "bsonType": "date"
        },
        "title": {
            "bsonType": "string",
            "validate": {
                "%%true": {
                    "%function": {
                        "arguments": "%%this",
                        "name": "validateCommentTitle"
                    }
                }
            }
        },
        "username": {
            "bsonType": "string"
        }
    },
    "required": [
        "username",
        "body",
        "_id",
        "owner_id"
    ],
    "title": "comment"
}
