{
    "collection": "userSongSuggestion",
    "database": "discovery",
    "roles": [
        {
            "name": "userReadAndWriteAll",
            "apply_when": {
                "%%user.identities.provider_type": "local-userpass"
            },
            "document_filters": {
                "write": true,
                "read": true
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "denyAllAccess",
            "apply_when": {
                "%%user.identities.provider_type": "api-key"
            },
            "document_filters": {
                "write": false,
                "read": false
            },
            "read": false,
            "write": false,
            "insert": false,
            "delete": false,
            "search": false
        }
    ]
}
