{
    "collection": "userPreferences",
    "database": "discovery",
    "roles": [
        {
            "name": "writeOwnReadAll",
            "apply_when": {
                "%%user.identities.provider_type": "local-userpass"
            },
            "document_filters": {
                "write": {
                    "%or": [
                        {
                            "user_id": {
                                "%exists": false
                            }
                        },
                        {
                            "user_id": "$user.id"
                        }
                    ]
                },
                "read": true
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "denyAllAccess",
            "apply_when": {},
            "document_filters": {
                "write": false,
                "read": false
            },
            "read": false,
            "write": false,
            "insert": false,
            "delete": false,
            "search": false
        }
    ]
}
